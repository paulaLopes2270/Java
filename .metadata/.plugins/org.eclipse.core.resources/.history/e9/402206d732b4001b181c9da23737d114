package exercicio1;
import java.util.Scanner;

public class OpTelefonia {

	public static void main(String[] args) {
	
		Scanner entrada = new Scanner (System.in);
		
		int minutos = entrada.nextInt();
		
		if (minutos <= 100) {
			System.out.println("Valor a pagar: R$ 50,00");
		}
		
		else {
			int diferenca =  minutos -100; 
			int diferencaValor = diferenca * 2;
			System.out.println("Valor a pagar: " + 50 + diferencaValor);
		}
		
		
		
		entrada.close();
	}

}
